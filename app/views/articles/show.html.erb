<h2>Post details</h2>

<h4><%= @article.title %></h4>
<p><%= @article.text %></p>
<p><%= link_to 'Back to posts', articles_path %></p>

<h4>Add new comment</h4>

  <% if user_signed_in? %>

    <%= form_for [@article, @article.comments.build] do |f| %>

      <p><%= f.label :body, 'Your comment' %></p>
      <p><%= f.text_area :body %></p>

      <p><%= f.submit 'Send comment' %></p>

    <% end %>

  <% else %>

    <p>Your must sign in to leave a comments</p>
    
  <% end %>

<h4>Comments:</h4>
<% @article.comments.each do |comment| %>
  <div class="jumbotron">
    <p><%= comment.author %></p>
    <p><%= comment.body %></p>
  </div>
<% end %>