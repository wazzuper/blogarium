<h2>New article</h2>

<%= form_for :article, url: articles_path do |f| %>
  <% if @article && @article.errors.any? %>
    <p>
      <ul>
        <% @article.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </p>
  <% end %>
  
  <p><%= f.label :title %></p>
  <p><%= f.text_field :title %></p>

  <p><%= f.label :text %></p>
  <p><%= f.text_area :text %></p>

  <p><%= f.submit t('articles.new') %></p>
<% end %>